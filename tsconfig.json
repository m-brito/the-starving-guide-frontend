{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@dtos/*": ["src/services/dtos/*"],
      "@animations/*": ["src/components/animations/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/commons/*"],
      "@hooks/*": ["src/hooks/*"],
      "@contexts/*": ["src/contexts/*"],
      "@pages/*": ["src/components/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/services/types/*"],
      "@globals/*": ["src/globals/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "styled.d.ts", "next.config.js"],
  "exclude": ["node_modules"]
}
